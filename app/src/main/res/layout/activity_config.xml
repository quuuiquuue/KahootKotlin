<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:spacing="16dp">

            <!-- Título de la pantalla -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configuración de Preguntas"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Campo para la pregunta -->
            <EditText
                android:id="@+id/etQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Introduce la pregunta"
                android:padding="16dp"
                android:backgroundTint="#E0E0E0"
                android:layout_marginBottom="8dp"/>

            <!-- Opciones de respuesta -->
            <EditText
                android:id="@+id/etOptionA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Opción A"
                android:padding="16dp"
                android:backgroundTint="#E0E0E0"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etOptionB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Opción B"
                android:padding="16dp"
                android:backgroundTint="#E0E0E0"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etOptionC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Opción C"
                android:padding="16dp"
                android:backgroundTint="#E0E0E0"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etOptionD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Opción D"
                android:padding="16dp"
                android:backgroundTint="#E0E0E0"
                android:layout_marginBottom="16dp"/>

            <!-- Grupo de respuestas correctas -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleccione la respuesta correcta:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/rgCorrectAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/rbOptionA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correcta: Opción A"
                    android:textSize="16sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>

                <RadioButton
                    android:id="@+id/rbOptionB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correcta: Opción B"
                    android:textSize="16sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>

                <RadioButton
                    android:id="@+id/rbOptionC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correcta: Opción C"
                    android:textSize="16sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>

                <RadioButton
                    android:id="@+id/rbOptionD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correcta: Opción D"
                    android:textSize="16sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
            </RadioGroup>

            <!-- Botones para guardar y borrar preguntas -->
            <Button
                android:id="@+id/btnSaveQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar Pregunta"
                android:textSize="18sp"
                android:padding="16dp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnDeleteAllQuestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Borrar todas las preguntas"
                android:textSize="18sp"
                android:padding="16dp"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
